<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Welcome to Quizzer!"

        android:textAlignment="center"
        android:textColor="#DD620F"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <FrameLayout
        android:id="@+id/teacher"
        android:layout_width="302dp"
        android:layout_height="225dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.184">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/teacher" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="89sp"
            android:layout_marginTop="186sp"
            android:text="Teacher"
            android:textAlignment="center"
            android:textColor="#CD4F1E"
            android:textSize="30sp"
            android:textStyle="italic" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/student"
        android:layout_width="304dp"
        android:layout_height="220dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        app:layout_constraintVertical_bias="0.512">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30sp"
            app:srcCompat="@drawable/studentimg" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="89sp"
            android:layout_marginTop="180sp"
            android:text="Student"
            android:textAlignment="center"
            android:textColor="#CD4F1E"
            android:textSize="30sp"
            android:textStyle="italic" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>